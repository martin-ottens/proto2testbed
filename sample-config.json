{
    "settings": {
        "management_network": "172.16.99.0/24",
        "diskimage_basepath": "/images/"
    },
    "networks": [
        {
            "name": "exp0",
            "host_ports": [
                "eno2"
            ]
        },
        {
            "name": "exp1",
            "host_ports": []
        }
    ],
    "integration": [
        {
            "mode": "none|await|startstop",
            "environment": {
                "KEY": "value"
            },
            "invoke_after": "startup|network|init",
            "wait_after_invoke": 0,
            "settings": {
                "start_script": "integration/start.sh",
                "stop_script": "integration/stop.sh",
                "wait_for_exit": 120
            }
        }
    ],
    "instances": [
        {
            "name": "vma.virtual.machine",
            "diskimage": "image.qcow2",
            "setup_script": null,
            "environment": null,
            "cores": 2,
            "memory": 1024,
            "networks": [
                "exp0"
            ],
            "preserve_files": [
                "/var/log/latest.log"
            ],
            "applications": [
                {
                    "application": "iperf3-server",
                    "name": "iperf-server",
                    "delay": 0,
                    "runtime": null,
                    "settings": {}
                }
            ]
        },
        {
            "name": "router.virtual.machine",
            "diskimage": "image.qcow2",
            "setup_script": "router/setup.sh",
            "environment": {
                "KEY": "value"
            },
            "cores": 2,
            "memory": 1024,
            "networks": [
                {
                    "name": "exp0",
                    "mac": "AA:BB:CC:DD:EE:FF",
                    "netmodel": "virtio"
                },
                {
                    "name": "exp1",
                    "mac": "11:22:33:44:55:66",
                    "netmodel": "e1000"
                }
            ]
        },
        {
            "name": "vmb.virtual.machine",
            "diskimage": "image.qcow2",
            "setup_script": "vmb/setup.sh",
            "environment": {
                "KEY": "value"
            },
            "cores": 2,
            "memory": 1024,
            "networks": [
                "exp1"
            ],
            "applications": [
                {
                    "application": "iperf3-client",
                    "name": "iperf-client",
                    "delay": 0,
                    "runtime": 30,
                    "settings": {
                        "host": "10.0.0.1"
                    },
                    "depends": [
                        {
                            "at": "started|finished",
                            "instance": "vma",
                            "application": "iperf3-server"
                        }
                    ]
                }
            ]
        }
    ]
}
