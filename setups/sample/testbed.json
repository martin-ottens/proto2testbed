{
    "settings": {
        "management_network": "auto",
        "diskimage_basepath": "/images/"
    },
    "networks": [
        {
            "name": "exp0",
            "host_ports": []
        }
    ],
    "integrations": [
        {
            "name": "await-integration",
            "type": "await",
            "invoke_after": "startup",
            "settings": {
                "start_script": "integrations/oneshot.sh",
                "wait_for_exit": 50
            } 
        },
        {
            "name": "start-stop-integration",
            "type": "startstop",
            "invoke_after": "network",
            "wait_after_invoke": 2,
            "settings": {
                "start_delay": 5,
                "start_script": "integrations/start.sh",
                "stop_script": "integrations/stop.sh",
                "wait_for_exit": 5
            }
        },
        {
            "name": "loadable",
            "type": "integrations/loadable_integration",
            "invoke_after": "init",
            "settings": {
                "delay": 5,
                "message": "Hello from loaded integration!"
            }
        }
    ],
    "instances": [
        {
            "name": "vma",
            "diskimage": "debian.qcow2",
            "setup_script": "vma/setup.sh",
            "environment": {
                "VARIABLE": "Hello from VM A Setup!"
            },
            "cores": 2,
            "memory": 1024,
            "networks": [
                "exp0"
            ],
            "applications": [
                {
                    "application": "iperf3-server",
                    "name": "vma-iperf-server",
                    "delay": 0,
                    "runtime": 100,
                    "settings": {}
                },
                {
                    "application": "procmon",
                    "name": "procmon-vma",
                    "delay": 5,
                    "runtime": 60,
                    "settings": {
                        "interfaces": ["enp0s3"],
                        "system": true
                    }
                },
                {
                    "application": "apps/log_app",
                    "name": "dynload_log",
                    "runtime": 60,
                    "settings": {
                        "level": "INFO",
                        "messages": [
                            "Log message one",
                            "Log message two",
                            "Log message three",
                            "Log message four",
                            "Log message five"
                        ]
                    }
                }
            ]
        },
        {
            "name": "vmb",
            "diskimage": "debian.qcow2",
            "setup_script": "vmb/setup.sh",
            "environment": {
                "VARIABLE": "Hello from VM B Setup!"
            },
            "cores": 2,
            "memory": 1024,
            "networks": [
                "exp0"
            ],
            "applications": [
                {
                    "application": "iperf3-client",
                    "name": "vmb-iperf-client",
                    "delay": 1,
                    "runtime": 60,
                    "settings": {
                        "host": "10.0.0.1"
                    }
                },
                {
                    "application": "procmon",
                    "name": "procmon-vmb",
                    "delay": 5,
                    "runtime": 60,
                    "settings": {
                        "interfaces": ["enp0s3"],
                        "system": true
                    }
                },
                {
                    "application": "run-program",
                    "name": "generate-file",
                    "delay": 20,
                    "runtime": 1,
                    "settings": {
                        "command": "vmb/generate-file.sh",
                        "environment": {
                            "OUTPUT": "Generated file for vmb."
                        }
                    }
                }
            ],
            "preserve_files": [
                "/root/output.txt"
            ]
        }
    ]
}